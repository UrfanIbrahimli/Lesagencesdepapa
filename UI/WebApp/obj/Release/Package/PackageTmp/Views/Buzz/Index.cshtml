@section scripts
{
    <script>
        $(document).ready(function () {
            setIframeWidht();
        });

        $(window).resize(function () {
            setIframeWidht();
        });


        function setIframeWidht() {
            $('iframe').each(function (i, e) {
                var containerWd = $('.container').width();
                if (containerWd > 600) {
                    $(e).width(600);
                    $(e).height(500);
                } else {
                    $(e).width(containerWd - 50);
                    $(e).height(containerWd - 100);
                }
            });
        }
    </script>
}
