@using AdminUI.Controllers
@using AdminUI.Models

@model RegionModel
@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header header-elements-inline">
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
            </div>
        </div>
    </div>

    <div class="card-body">

        @using (Html.BeginForm("Save", "Region", FormMethod.Post, new { @class = "form" }))

        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Uid)
            @Html.HiddenFor(m => m.PathString)
            <div class="row">

                <div class="col-lg-12">
                    <div class="form-group">
                        <label>Prénom</label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-start align-items-center">
                <a href="@Url.Action(nameof(RegionController.Index))" class="btn btn-light">Revenir</a>
                <button type="submit" class="btn bg-blue ml-3">Confirmer <i class="icon-paperplane ml-2"></i></button>
            </div>
        }
    </div>
</div>

@section scripts{

    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
}


